<!--pages/publish/choose/index.wxml-->
<!-- 手机发帖 -->
<view wx:if="{{is_show}}">
  <view style="width: 100%;height: 100%;position: fixed;top:0;left:0;z-index:1000;background:#000;opacity:0.5;overflow:hidden;"></view>
  <view style='position:fixed;bottom:0;height:135px;background-color:#fff;z-index:9999;width:100%;'>
    <view style='clear:both;overflow:hidden'>
      <image src="../../../img/phone_publish.png" style="width:22px;height:34px;float:left;margin-left:50px;margin-top:35px"></image>
      <navigator url="/pages/publish/index" >
        <view style="float:left;font-size:14px;margin-left:10px;margin-top:36px">手机发帖</view>
      </navigator>

      <image src="../../../img/computer_publish.png" style="width:34px;height:31px;float:left;margin-left:42px;margin-top:38px"></image>
      <navigator url="/pages/computer/computer">
        <view style="float:left;font-size:14px;margin-left:10px;margin-top:36px">电脑发帖</view>
      </navigator>
    </view>
    <view style='clear:both;border:1px solid #eee;margin-top:25px;'></view>

    <button style="font-size:14px;margin:0 auto;text-align:center;width:100%;height:100rpx" bindtap='quit'>取消</button>

  </view>

</view>