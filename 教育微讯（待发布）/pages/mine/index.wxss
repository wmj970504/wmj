.mine-top {
  background-color: #fff;
  border: none;
}

.focus-info {
  border-bottom: none;
}

.normal-list {
  height: 88rpx;
}

.top-list {
  height: 134rpx;
}

.mine-img {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.mine-info {
  width: 227rpx;
}

.mine-name {
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
}

.mine-title {
  font-size: 20rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}

.floor-icon {
  margin-left: 30rpx;
  height: 30rpx;
}

