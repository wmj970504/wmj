 /* pages/renzheng/renzheng.wxss */
page{
  background: #eee
}
.head {
  display: flex
}

.head van-icon {
  margin-bottom: 40rpx;
  margin-left: 40rpx;
}

.word {
  width:80%;
  text-align: center;
  margin-bottom: 40rpx;
  color: #fff;
}
.tishi{
  font-size: 25rpx;
  color: #aaa;
  margin: 10rpx;
}
van-cell-group{
  width: 100%;
}
.zhengjian {
  width: 100%;
  display: inline-block;
}
van-cell-group view{
  position: relative;
}
.zhengjian+view{
  margin: 0;
  width: 35%;
  position: absolute;
  top: -1rpx;
  display: inline-block;
  background: #fff;
}
.zhengjian+view text{
  margin: 0;
  text-align: center;
  line-height: 44rpx;
}
.sfz{
  width: 21%;
  height: 21vw;
  float: left;
  margin: 16rpx 2% 0 2%;
  text-align: center;
  font-size: 20rpx;
  overflow: hidden;
}
.sfz image{
  width: 100%;
}
.sfz1 text{
  color:blue;
}
.sfz1{
  width: 21%;
  float: left;
  margin: 4rpx 2% 4rpx 2%;
  text-align: center;
  font-size: 25rpx;
  overflow: hidden;
}
van-cell-group{
  background-color: #fff;
}
.btn{
