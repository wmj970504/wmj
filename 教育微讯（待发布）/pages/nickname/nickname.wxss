/* pages/nickname/nickname.wxss */

page {
  background-color: #fff;
}

.name-container {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  border-top: 1px solid #dedede;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.name-total {
  width: 90%;
  margin: auto;
  display: flex;
  flex-direction: row;
}

.name-title {
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
}

.name-enter {
  display: inline-block;
  margin-left: 61rpx;
}

.hr {
  width: 90%;
  height: 1rpx;
  margin: auto;
  background: rgba(222, 222, 222, 1);
}

.nickname-btn {
  width: 90%;
  height: 74rpx;
  background-color: #1fc987;
  color: white;
  border-radius: 37rpx;
  margin-top: 955rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
}
.tip{
	color: #f00;
	margin-left: 155rpx;
}