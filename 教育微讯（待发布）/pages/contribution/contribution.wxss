/* pages/contribution/contribution.wxss */

.floor-icon
{
		width:80rpx;
		height: 30rpx;
		font-size:20rpx;
		font-family:PingFang-SC-Medium;
		font-weight:500;
		margin-left:35rpx;
}

.text-gray
{
	display: flex;
	flex-direction: column;
	position: relative;
	bottom: 20rpx;
}

.progress-detail
{
		height: 21rpx;
		margin-top: 10rpx;
}

.detail-left
{
		font-size:20rpx;
		font-family:PingFang-SC-Medium;
		font-weight:500;
		color:rgba(31,201,135,1);
		float: left;
}

.detail-center
{
		font-size:20rpx;
		font-family:PingFang-SC-Medium;
		font-weight:500;
		color:rgba(51,51,51,1);
}

.progress-detail
{
	text-align: center;
}

.detail-right
{
		float: right;
		font-size:20rpx;
		font-family:PingFang-SC-Medium;
		font-weight:500;
		color:rgba(31,201,135,1);
}

.contribution-info
{
		margin-top:25rpx;
		width: 100%;
		height: 88rpx;
		background-color: #fff;
		display: flex;
		flex-direction: column;
		justify-content: center;
		border-bottom: 1px solid #DEDEDE;
}

.title-text
{
		font-size:30rpx;
		font-family:PingFang-SC-Medium;
		font-weight:500;
		color:rgba(51,51,51,1);
		display: flex;
}

.info-title
{
	width: 90%;
	margin: auto;
	display: flex;
	flex-direction: column;
}

.info-detailtop
{
		width: 100%;
		height: 340rpx;
		background-color: #fff;
}

.top-part
{
		width: 90%;
		display: flex;
		flex-direction: row;
}

.part-title
{
		width: 50%;
		height: 68rpx;
		text-align: center;
		display: flex;
		flex-direction: column;
		justify-content: center;
		color: #333333;
}

.part-info
{
		width: 50%;
		height: 68rpx;
		text-align: center;
		display: flex;
		flex-direction: column;
		justify-content: center;
		color: #999999;
}

.info-detailbottom
{
		width: 100%;
		height: 576rpx;
		background-color: #fff;
}

.supplement
{
	height: 159rpx;
}

.foot-text
{
	position: relative;
	top:30rpx;
	left: 32rpx;
	font-size:24rpx;
	font-family:PingFang-SC-Medium;
	font-weight:500;
	color:rgba(51,51,51,1);
}