<!--pages/school/school.wxml-->
<view class="container">
  <view class='head'>
    <van-icon style='  margin-top: {{navH-35}}px' name="arrow-left" color='white' bindtap='fanhui'/>
    <view style='  margin-top: {{navH-35}}px' class='word'>学校</view>
  </view>
  <view class='content'>
    <van-field
      clearable
      data-school="school"
      value="{{school}}"
      placeholder="请输入学校"
      bind:change="schoolname"
    />
    <van-button bind:click="save" color="linear-gradient(to right, #FCC635,#FF9518)" size="large">保存</van-button>
  </view>
</view>
