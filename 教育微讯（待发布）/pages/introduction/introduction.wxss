/* pages/introduction/introduction.wxss */

page {
  background-color: #fff;
}

.introduction-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  border-top: 1px solid #dedede;
}

.introduction-title {
  width: 90%;
  margin: auto;
  margin-top: 30rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.introduction-detail {
  width: 90%;
  margin: 30rpx auto;
  padding: 30rpx;
  height: 400rpx;
  border: 1px solid #eee;
}

.bottom-text {
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(186, 186, 186, 1);
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
}

.modifyinghead-btn {
  width: 90%;
  height: 74rpx;
  background-color: #1fc987;
  color: white;
  border-radius: 37rpx;
  margin-top: 221rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
}

.modifyinghead-btn2 {
  width: 90%;
  height: 74rpx;
  color: #999;
  border-radius: 37rpx;
  border: 1px solid #dedede;
  margin: auto;
  margin-top: 30rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
}
