<!--pages/settingpwd/settingpwd.wxml-->
<form bindsubmit='submit'>
  <view class="cu-form-group">
    <view class="title">原密码</view>
    <input placeholder="请输入旧密码" password='true' name="oldPassword" value='{{form.oldPassword}}' bindinput='bindOldPassword'></input>
  </view>

  <view class="cu-form-group">
    <view class="title">新密码</view>
    <input placeholder="请输入新的密码" password='true' name="password" value='{{form.password}}' bindinput='bindPassword'></input>
  </view>

  <view class="cu-form-group">
    <view class="title">新密码</view>
    <input placeholder="请再次输入新密码" password='true' name="rePassword" value='{{form.rePassword}}' bindinput='bindRePassword'></input>
  </view>

  <button class='confirm' form-type="submit">确认修改</button>
</form>