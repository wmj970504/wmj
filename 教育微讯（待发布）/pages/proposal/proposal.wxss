}

.proposal-text {
  width: 90%;
  height: 500rpx;
  border: 1px solid #eee;
  margin: 30rpx auto;
	padding: 30rpx;
}

.bottom-text {
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
