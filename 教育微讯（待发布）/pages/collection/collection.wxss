/* pages/collection/collection.wxss */

page{
		background-color: #fff;
}

.system-container
{
		width: 100%;
		background-color: #fff;
}

.system-part
{
		width: 90%;
		border-bottom: 1px solid #DEDEDE;
		margin: auto;
		display: flex;
		flex-direction: row;
}
.system-part:last-child{border-bottom-width:0px!important;}
.system-img
{
		width: 40rpx;
		height: 40rpx;
}

.part-left
{
		margin-top: 20rpx;
}

.part-right
{
		margin-top: 15rpx;
		display: flex;
		flex-direction: column;
		width: 90%;

}

.info-title
{
		font-size:30rpx;
		font-family:PingFang-SC-Medium;
		font-weight:500;
		color:rgba(0,0,0,1);
		margin-left:20rpx;
}

.info-time
{
		font-size:24rpx;
		font-family:PingFang-SC-Medium;
		font-weight:500;
		color:rgba(153,153,153,1);
		float: right;
		margin-top:5rpx;
}

.info-bottom
{	
			margin-top:18rpx;
		margin-bottom: 20rpx;
}

.info-detail
{
		font-size:24rpx;
		font-family:PingFang-SC-Medium;
		font-weight:500;
		color:rgba(51,51,51,1);
}

.bottom-btn1
{
		border-radius: 0;
		width: 100%;
		height: 94rpx;
		background-color: #1FC987;
		color:white;
		font-size:36rpx;
		font-family:PingFang-SC-Medium;
		font-weight:500;
		position: fixed;
		bottom: 0rpx;
}


