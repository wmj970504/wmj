/**index.wxss**/
.title {
  display: block;
  margin-top: 55rpx;
  text-align: center;
  color:#fff;
  font-size: 40rpx;
}
.search {
  width:100%
}

.classify_list{
  display: flex;
  width: 100%;
  height: 80rpx;
  overflow-y: scroll;
  white-space: nowrap; 
}

.classify_list::-webkit-scrollbar {
  display: none
}
.dibu{
  margin-bottom: 110rpx;
}
.classify{
  margin:0 30rpx;
  padding: 18rpx 0 10rpx 0;
  font-size: 30rpx;
  color: #666;
}

.active {
  color:#FF9518;
  border-bottom: 4rpx solid #FF9518
}
.outside{
  width:auto;
  border: 1rpx solid #fff;
  position: relative;
}
.inside{
  width:auto;
  border: 1rpx solid #eee;
  margin: 50rpx 5% 0 5%;
  position: relative
}
.touxiang{
  width:90rpx;height:90rpx;
  border-radius: 50%;
  position: absolute;
  top:25rpx;left: 6%;
  z-index: 99;
}
.name{
  display: flex;
  margin-top: 12rpx;
}
.name image{
 vertical-align:middle;
 height:30rpx;
 margin-left:5rpx
}
.nametext{
  font-size: 35rpx;
  color: #666;
  margin-left: 100rpx
}
.shiming{
  width:120rpx;height:30rpx;
  margin-top: 10rpx
}
.choukuan{
  width:120rpx;height:60rpx;
  position: absolute;
  right: 2%;top: -4rpx
}
.choukuan text{
  display: block;
  position: absolute;
  top:2rpx;right: 12rpx;
  font-size: 25rpx;
  color: #fff;
}
.choukuan image{
  width:100%;height:100%;
}
.age{
  margin-top: 20rpx;
}
.age image{
  width:18rpx;height:18rpx;
}
.age van-tag{
  margin-left: 15rpx
}
.jindu {
  margin-top: 20rpx;
  margin-left: 12rpx;
  font-weight: 600;
  font-size:30rpx;
}
.jindu view {
  height:6rpx;
  margin-top: 10rpx;
  border-radius: 2rpx;
  background-image:linear-gradient(to right,#FCC635,#FF9518);
}
.botton{
  margin-top: 25rpx;
  font-size: 28rpx;
  color: #aaa
}
.kong{
  height:250rpx;
}
.swiper {
  height: 300rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.null image {
  width:250rpx;height:250rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%)
}
.null text {
  margin-top:100rpx;
  display: block;
  text-align: center;
  color:#999
}